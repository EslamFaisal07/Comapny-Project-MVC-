@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br\>
    <br\>


        <div class="m-2">
            <form class="row offset-2" asp-action="Index" method="get">
                <div class="col-8">
                    <input class="form-control " type="text" name="SearchName" placeholder="Search By User Name" />

                </div>
                <div class="col-4">
                    <input type="submit" class="btn btn-outline-dark" value="search" />
                </div>
            </form>
        </div>


        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover mt-4 ">
                <thead class="text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(d => d.Id)</th>
                        <th>@Html.DisplayNameFor(d => d.FName)</th>
                        <th>@Html.DisplayNameFor(d => d.LName)</th>
                        <th>@Html.DisplayNameFor(d => d.Email)</th>
                        <th>@Html.DisplayNameFor(d => d.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(d => d.Roles)</th>

                        <th>Details</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>

                </thead>
                <tbody class="text-center">
                    @foreach (var user in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(e => user.Id)</td>
                            <td>@Html.DisplayFor(e => user.FName)</td>
                            <td>@Html.DisplayFor(e => user.LName)</td>
                            <td>@Html.DisplayFor(e => user.Email)</td>
                            <td>@Html.DisplayFor(e => user.PhoneNumber)</td>
                            <td>@string.Join(",", user.Roles)</td>




                            <td>
                                <a class="btn btn-primary" asp-action="Details" asp-route-id="@user.Id">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                            <td>
                                <button asp-action="Delete" asp-route-id="@user.Id" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@user.Id">
                                    <i class="fas fa-trash"></i> Delete
                                </button>



                            </td>


                        </tr>
                     @* <td>  *@
                       
                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteModal-@user.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are You Sure to Delete  Employee With Name @user.FName @user.LName?
                                    </div>
                                    <div class="modal-footer">
                                        <form method="post" asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="mt-4">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    @* </td> *@

                    }


                </tbody>




            </table>


        }
        else
        {
            <div class="alert alert-info mt-3">
                <h2>No Users Found !!</h2>
            </div>

        }


  