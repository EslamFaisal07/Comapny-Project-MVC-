@model EditUserVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row justify-content-center align-items-center mt-3 ">
    <h1 class="col-8 my-4 ">Edit @Model.FName @Model.LName</h1>

    <form method="post" asp-controller="User" asp-action="Edit" enctype="multipart/form-data" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3">

            <label class="form-label " asp-for="FName">FName</label>
            <input type="text" asp-for="FName" class="form-control" />
            <span asp-validation-for="FName" class="text-danger"></span>

        </div>


        <div class="form-group mb-3">

            <label class="form-label " asp-for="LName">LName</label>
            <input type="text" asp-for="LName" class="form-control" />
            <span asp-validation-for="LName" class="text-danger"></span>

        </div>


        <div class="form-group mb-3">

            <label class="form-label " asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>



        <div class="form-group mb-3">

            <label class="form-label " asp-for="PhoneNumber"></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>










        <div class="mt-4 m-auto d-flex ">
            <input class="btn btn-success" type="submit" value="Edit" />

            <a asp-controller="User" asp-action="Index" class="btn btn-outline-dark">
                Back to List
            </a>

        </div>
    </form>
</div>
@section ValidationScripts
{
    <partial name="_ValidationScriptsPartial" />


}
