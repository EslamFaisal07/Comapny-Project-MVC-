@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>All Roles</h1>
<br\>
    <br\>
        <a asp-controller="Role" asp-action="Create" class="btn btn-primary">Add Role </a>
        <br\>
            <br\>

                <div class="m-2">
                    <form class="row offset-2" asp-action="Index" method="get">
                        <div class="col-8">
                            <input class="form-control " type="text" name="SearchName" placeholder="Search By Role Name" />

                        </div>
                        <div class="col-4">
                            <input type="submit" class="btn btn-outline-dark" value="search" />
                        </div>
                    </form>
                </div>


                @if (Model.Count() > 0)
                {
                    <table class="table table-striped table-hover mt-4 ">
                        <thead class="text-center">
                            <tr>
                                <th>@Html.DisplayNameFor(r => r.Id)</th>
                                <th>@Html.DisplayNameFor(r => r.Name)</th>


                                <th>Details</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>

                        </thead>
                        <tbody class="text-center">
                            @foreach (var role in Model)
                            {
                                <tr>

                                    <td>@Html.DisplayFor(e => role.Id)</td>
                                    <td>@Html.DisplayFor(e => role.Name)</td>

                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@role.Id">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@role.Id">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <button asp-action="Delete" asp-route-id="@role.Id" type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@role.Id">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>



                                    </td>
                                </tr>
                                <div class="modal fade" id="deleteModal-@role.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Role</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this Role?
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id" class="mt-4">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }


                        </tbody>




                    </table>


                }
                else
                {
                    <div class="alert alert-info mt-3">
                        <h2>No Roles Found !!</h2>
                    </div>

                }




