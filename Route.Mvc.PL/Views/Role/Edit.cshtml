@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="row justify-content-center align-items-center mt-3 ">
    <h1 class="col-8 my-4 ">Edit Role</h1>

    <form method="post" asp-controller="Role" asp-action="Edit" enctype="multipart/form-data" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group mb-3">

            <label class="form-label " asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>















        <div class="mt-4 m-auto d-flex ">
            <input class="btn btn-success" type="submit" value="Edit" />

            <a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">
                Back to List
            </a>

        </div>
    </form>
</div>
@section ValidationScripts
{
    <partial name="_ValidationScriptsPartial" />


}